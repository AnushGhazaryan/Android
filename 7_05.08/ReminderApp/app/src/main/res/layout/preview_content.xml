<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/relativLayout_width"
        android:layout_height="@dimen/relativeLayout_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/relativeLayout_marginTop"

        android:gravity="center">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:layout_centerInParent="true"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_logo_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="@dimen/tv_logo_text_textSize" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="@dimen/tv_text_width"
        android:layout_height="@dimen/tv_text_height"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="@dimen/tv_text_textSize" />

</LinearLayout>